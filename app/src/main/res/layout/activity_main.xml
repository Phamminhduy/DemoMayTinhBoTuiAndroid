<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context="com.example.phamm.calculatordemo.MainActivity">


    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKQ"
        android:background="#91d2cd"
        android:text="7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btntru"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btncong"
        android:layout_toEndOf="@+id/btn3"
        android:background="#2e47bf"
        android:text="-"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnbang"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnxoa"
        android:layout_toEndOf="@+id/btnam"
        android:background="#3856ba"
        android:text="="
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnam"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:background="#2e47bf"
        android:text="+/-"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnnhan"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btnchia"
        android:layout_toEndOf="@+id/btn3"
        android:background="#2e47bf"
        android:text="*"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn2"
        android:background="#91d2cd"
        android:text="3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnxoa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:background="#2e47bf"
        android:text="CE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnchia"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:background="#2e47bf"
        android:text="/"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtHienThi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="bottom|right"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtKQ"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHienThi"
        android:background="#fff"
        android:gravity="bottom|right"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btncong"
        android:background="#91d2cd"
        android:text="4"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncong"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtKQ"
        android:layout_toEndOf="@+id/btn9"
        android:background="#2e47bf"
        android:text="+"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:background="#91d2cd"
        android:text="1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn1"
        android:layout_toStartOf="@+id/btn2"
        android:background="#91d2cd"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtKQ"
        android:layout_toEndOf="@+id/btn4"
        android:background="#91d2cd"
        android:text="8"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn1"
        android:background="#91d2cd"
        android:text="2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncham"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:background="#91d2cd"
        android:text="."
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtKQ"
        android:layout_toEndOf="@+id/btn8"
        android:background="#91d2cd"
        android:text="9"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn8"
        android:background="#91d2cd"
        android:text="6"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn1"
        android:background="#91d2cd"
        android:text="5"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
